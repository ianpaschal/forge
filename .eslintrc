{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {

    // indentation
    "indent": [ 2, "tab" ],

    // spacing
    "space-in-parens": [ 2, "always", { "exceptions": ["{}"] } ],
    "space-infix-ops": 2,
    "space-before-blocks": [ 2, "always" ],
    "comma-spacing": [ 2, { "before": false, "after": true }],
    "template-curly-spacing": [ 2, "always" ],
    "array-bracket-spacing": [ 2, "always" ],
    "object-curly-spacing": [ 2, "always" ],
    "computed-property-spacing": [ 2, "always" ],
    "no-multiple-empty-lines": [ 2, { "max": 1, "maxEOF": 0, "maxBOF": 0 } ],

    // Force parenthesis in fat arrow functions, even if they have only 1 argument:
    "arrow-parens": [2, "always"],

    // Force semicolons at the end of every statement:
    "semi": [2, "always"],

    // strings
    "quotes": [ 2, "double" ],

    // code arrangement matter
    "no-use-before-define": [ 2, { "functions": false } ],

    // make it meaningful
    "prefer-const": 1,

    // keep it simple
    "complexity": [ 1, 5 ]
  }
}


/*
Needs;

space around comparisons
space around fat arrows
space between if, for, etc. and parens
*/
